{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["config/**/*", "mock/**/*", "src/**/*", ".eslintrc.js", "typings.d.ts"],
  "exclude": ["node_modules", "es", "lib", "dist", "**/__test__", "test"]
}
